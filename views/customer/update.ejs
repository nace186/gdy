<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title><%= __('Update') %> <%= __('Customer') %></title>

    <% include ../partials/header %>

  </head>

  <body>
    <div id="wrapper">
      <%- include("../partials/nav",{title: __('Update') + ' ' + __('Customer')}) %>

      <div id="page-wrapper" style="padding-top: 5px;">

        <div class="row">
          <div class="col-lg-12">
            <div class="panel panel-default">
              <div class="panel-heading">
                           
              </div>
              <div class="panel-body">
                <form role="form" action="/customer/update/<%= row.id %>" method="post">
                  <table class="table table-hover" id="customerTable">
                    <tr>
                      <td>
                        <div class="form-group form-inline">
                          <label><%= __('MS') %>:</label>
                          <input class="form-control" name="ms" value="<%= row.ms %>" type="text" autofocus>
                        </div>
                      </td>
                      <td>
                        <div class="form-group form-inline">
                          <label><%= __('Code') %>:</label>
                          <input class="form-control" name="code" value="<%= row.code %>" type="text" style="width:250px" autofocus> 
                        </div>
                      </td>
                      <td>
                        <div class="form-group form-inline">
                          <label><%= __('Admin') %>:</label>
                          <input class="form-control" name="admin" value="<%= row.admin %>" type="text" style="width:250px" autofocus> 
                        </div>
                      </td>
                    </tr>
                    <tr>
                      <td>
                        <div class="form-group form-inline">
                          <label><%= __('Name') %>:</label>
                          <input class="form-control" name="name" value="<%= row.name %>" type="text" autofocus>
                        </div>
                      </td>
                      <td>
                        <div class="form-group form-inline">
                          <label><%= __('ShortHand') %>:</label>
                          <input class="form-control" name="shortHand" value="<%= row.shortHand %>" type="text" autofocus>
                        </div>
                      </td>
                      <td>
                        <div class="form-group form-inline">
                          <label><%= __('Contact') %>:</label>
                          <input class="form-control" name="contact" value="<%= row.contact %>" type="text" style="width:250px" autofocus> 
                        </div>
                      </td>
                    </tr>
                    <tr>
                      <td colspan="3">
                        <div class="form-group form-inline">                                        
                          <label><%= __('Address') %>:</label>
                          <input class="form-control" name="address" value="<%= row.address %>" type="text" style="width:80%" autofocus>
                        </div>
                      </td>
                    </tr>
                    <tr>
                      <td>
                        <div class="form-group form-inline">
                          <label><%= __('Area') %> :</label>
                          <input class="form-control" name="area" value="<%= row.area %>" type="text">
                        </div>
                      </td>
                    <td>
                      <div class="form-group form-inline">
                        <label><%= __('City') %> :</label>
                        <input class="form-control" name="city" value="<%= row.city %>" type="text">
                      </div>
                    </td>
                    <td>
                      <div class="form-group form-inline">
                        <label><%= __('Phone') %> :</label>
                        <input class="form-control" name="phone" value="<%= row.phone %>" type="text">
                      </div>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <div class="form-group form-inline">
                        <label><%= __('Transport') %> :</label>
                        <input class="form-control" value="<%= row.transport %>" name="transport"  type="text" >
                      </div>
                    </td>
                    <td>
                      <div class="form-group form-inline">
                        <label><%= __('Inbound') %> <%= __('Time') %> :</label>
                        <input class="form-control" name="inboundTime" value="<%= row.inboundTime %>"   type="text" >
                      </div>
                    </td>
                    <td>
                      <div class="form-group form-inline">
                        <label><%= __('Outbound') %>  <%= __('Time') %> :</label>
                        <input class="form-control" name="outboundTime" value="<%= row.outboundTime %>"   type="text" >
                      </div>
                    </td>
                  </tr>
                  <tr>
                    <td colspan="3">
                      <div class="form-group form-inline">
                        <label><%= __('Transport') %> <%= __('Address') %> :</label>
                        <input class="form-control" style="width:80%;" value="<%= row.transportAddress %>" name="transportAddress" type="text" autofocus >
                      </div>
                    </td>                                 
                  </tr>
                  <tr>
                    <td>
                      <div class="form-group form-inline">
                        <label><%= __('Transport') %>  <%= __('Phone') %> :</label>
                        <input class="form-control" name="transportPhone" value="<%= row.transportPhone %>"  type="text" >
                                       </div>
                                    </td>
                                    <td colspan="2">
                                      <div class="form-group form-inline">
                                        <label><%= __('Remarks') %>:</label>
                                        <input class="form-control" name="remarks" value="<%= row.remarks %>" type="text" >
                                       </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                      <div class="form-group form-inline">
                                        <label><%= __('Remitter') %>:</label>
                                        <input class="form-control" name="remitter" value="<%= row.remitter %>" type="text" >
                                       </div>
                                    </td>
                                    <td>
                                      <div class="form-group form-inline">
                                        <label><%= __('Effective') %>:</label>
                                        <input class="form-control" name="effective" value="<%= row.effective %>" type="number" step="0.01" >
                                       </div>
                                    </td>
                                    <td> 
                                        <input type="submit" class="btn btn-lg btn-success btn-block" value="<%= __('Submit') %>"/>                               
                                    </td>                                
                                </tr>
                            </table>
                                    
                        </form>
                        
                            
                        </div>
 						

                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
   					
                </div>
        </div> <!-- /.row -->
      </div>
    </div> <!-- /#wrapper -->

    <% include ../partials/js %>

  </body>
</html>
