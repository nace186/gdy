<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title> <%= __('View') %> <%= __('Order') %>  <%= row[0].orderId %></title>
    <% include ../partials/header %>
  </head>

  <body>
    <div style="padding: 5px;margin: 5px;">
      <div class="row" style="padding-top: 5px;">
         <div class="col-lg-12">
           <div class="panel panel-default">
              <div class="panel-heading">
                   <h1> <%= __('View') %> <%= __('Order') %> <%= row[0].orderId %></h1>
              </div>
              <!-- /.panel-heading -->

              <div class="panel-body">

                
                <label>  <%= __('Date') %> : </label><div style="width:170px;padding-left:5px; display:inline-block;"> <%= row[0].date %> </div>
                <label>  <%= __('Type') %> : </label><div style="width:170px;padding-left: 5px; display:inline-block;"> 
                  <% if (user.lang == 'en') { %>
                    <%=row[0].nameEn %> 
                  <% } %>
                  <% if (user.lang == 'cn') { %>
                    <%=row[0].nameCn %> 
                  <% } %>    
                  <% if (user.lang == 'vn') { %>
                    <%=row[0].nameVn %> 
                  <% } %>
                </div>
                <label>  <%= __('Customer') %> <%= __('Name') %> : </label> <%= row[0].customerName %>
                <p>
                <label> <%= __('Reference') %> <%= __('Id') %> : </label>
                  <%
                  if( row[0].type == 0) {
                   %>
                    <a href="/transaction/viewTransaction/<%=row[0].referenceId%>" target="_blank"><%=row[0].referenceId%></a>
                  <% } %>
                  
                </p>
                <p>
                <label>  <%= __('Note') %> : </label> <%= row[0].note %>
                </p>
              </div>
              <div class="panel-body">
                            
                <table class="table table-striped table-bordered table-hover" id="productTable">
                  <thead>
                     <tr>
                        <th><%= __('Product') %> </th>
                        <th><%= __('hmc') %> </th>
                        <th><%= __('Long An') %> </th>                        
                        <th><%= __('Total') %></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% var total = 0;
                      for(var i = 0; i < row.length; i++) { %>
                    <tr>
                      <td><%= row[i].productName %></td>
                      <td><%= row[i].hmc %></td>
                      <td><%= row[i].longAn %></td>
                      <td><%= row[i].productsTotal %></td>

                    </tr>
                    <%   total = total+ row[i].productsTotal  %>
                    <% } %>                    
                    
                    <tr>
                    <td colspan="3" style="text-align: right;"><label><%= __('Total') %> :</label></td>
                    <td><%= total %></td>
                    </tr>
                  </tbody>
                </table>                          
              </div>
            <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
          </div>
           <!-- /.col-lg-12 -->
        </div>
            <!-- /.row -->
    </div>
        <!-- /#page-wrapper -->

    <% include ../partials/js %>
    <script>
      $(document).ready(function() {
  
                   
      });

      </script>
  </body>
</html>